{
    "name": "cryptopay-dev/cryptopay",
    "description": "Cryptopay API client",
    "homepage": "https://business.cryptopay.me",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.2",
        "ext-json": "*",
        "vlucas/phpdotenv": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "mockery/mockery": "^1.4",
        "squizlabs/php_codesniffer": "^3.5",
        "php-vcr/php-vcr": "^1.5"
    },
    "scripts": {
        "lint": "./vendor/bin/phpcs .",
        "lint-fix": "./vendor/bin/phpcbf .",
        "test": "./vendor/bin/phpunit --verbose",
        "coverage": "./vendor/bin/phpunit --coverage-text"
    },
    "autoload": {
        "psr-4": {
            "Cryptopay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
